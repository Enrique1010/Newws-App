<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.erapps.newws.ui.top.TopListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@+id/recyclerTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/general"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:checkedIcon="@drawable/ic_checked"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:checked="true"
                    android:text="@string/general" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:checkedIcon="@drawable/ic_checked"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_weight="1"
                    android:text="@string/sports" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/entertainment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:checkedIcon="@drawable/ic_checked"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:text="@string/entertainment" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:checkedIcon="@drawable/ic_checked"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:text="@string/technology" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/science"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:checkedIcon="@drawable/ic_checked"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:text="@string/science" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:checkedIcon="@drawable/ic_checked"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:text="@string/health" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:checkedIcon="@drawable/ic_checked"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:text="@string/business" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            tools:listitem="@layout/fragment_top_list_item" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.progressStatus ? View.VISIBLE : View.GONE}"
            android:indeterminate="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>